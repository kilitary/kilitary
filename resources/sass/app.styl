body
    font-family "Lucida Console"
    font-size 12px
    padding-left 0px
    height 100%
    width 98%

.content-container
    box-shadow 0 0px 0px #2abaff, 0 0px 32px 0 #ffefa2
    padding-top 5px
    padding-bottom 5px
    padding-left 15px
    background-color #fefff5

#flagleft
    display inline-block
    position absolute
    width 100px
    height 100px
    left 10px
    top -16px
    float left
    background-image url(/images/usflagged.jpg)
    background-position-x 100px
    background-size contain

#flagright
    display inline-block
    top -16px
    width 40px
    height 70px
    position absolute
    left 97%
    float left
    background-image url(/images/usflagged.jpg)
    background-position-x 42px
    background-size contain
    border-top 6px dotted plum

#app
    border-left 11px dashed orange
    padding-left 9px

button, input, textarea
    box-shadow 0 0px 23px 0 #ffd023, 0 0px 0px 0 #ff0081
    font-family lucida console
    background-color white
    cursor pointer
    border 2px dashed darkorange

    &:hover
        box-shadow 0px 1px 15px #a1ff25, 0 0px 0px 0 #ff0081
        background-color #fff9be !important
        border 2px dashed red !important

.url-input
    width 300px
    margin-top 3px
    margin-bottom 5px

blockquote
    border-left 3px solid blueviolet
    margin-left 0px
    padding-left 3px

ul
    list-style-type circle

.section-h3
    border-bottom 1px solid #ebf8ff
    padding-bottom 11px
    display border-block
    font-size 16px
    width 20%
    font-variant small-caps
    clear both

.container
    width 100%
    height 100%
    display block

.list-item-container
    border-bottom 1px dashed lightblue
    padding 4px
    display box
    min-height 10px

.marginleft
    margin 12px

.smallcaps
    font-variant small-caps
    font-family consolas
    font-size 17px

.super-small
    font-size 4px
    font-family "Lucida Console"
    font-variant small-caps

.topheadmargin
    margin-top 10px
    padding-top 12px

.interestlink
    font-size 12px
    padding 3px
    font-family lucida console
    box-shadow 0 2px 8px #45ff08, 0 1px 1px 0 #34daff

    &:hover
        box-shadow 1px 1px 1px red, 0 0px 1px 0 #34daff


.select-doc-future
    padding-left 15px
    margin-left 0px

    & li
        padding-top 5px

.tib-war-header
    font-variant small-caps
    font-size 16px
    display inline

.comment
    display flow-root
    margin-bottom 8px
    padding-bottom 5px
    box-shadow 18px 3px 0px #24b8ff, 0 0px 5px 0 #b0ffd7

.new-comment
    padding 10px

.text-comment
    width 20%
    height 120px
    clear both

.comment-img
    position relative
    top 4px
    width 12px
    height 12px

.comment-date
    font-size 12px
    font-family consolas

.comment-content
    padding-left 18px
    font-size 12px
    font-family consolas

.page-content
    padding-top 0px
    margin-top 9px
    font-family "Liberation Mono"
    font-size 11px

.page-header
    border-top 9px dotted lightgray
    padding-bottom 0px
    padding-top 11px
    margin-top 0px

.page-footer
    border-top 9px dotted lightgray
    padding-bottom 0px
    padding-top 0px
    margin-top 0px

.marginbottom
    margin-bottom 5px

.list-key
    font-family "consolas"
    font-size 11px
    width 10%
    display inline
    text-align right
    border-right 2px dashed greenyellow
    padding-right 8px
    margin-right 1px
    float left
    box-shadow 14px 24px 6px #f5f5f5, 1px 0px 0px 0px #ff0081

    &:hover
        background-color lawngreen
        color red
        cursor pointer

.list-item
    font-family "consolas"
    font-size 11px
    display inline
    padding-left 2px
    margin 10px
    width 90%
    box-shadow 0px 1px 6px #a1ff25, 0 0px 0px 0 #ff0081

    &:hover
        background-color deeppink
        color white
        cursor pointer

.links
    padding-top 10px

.page-country
    padding-top 5px
    padding-bottom 5px

.ignited
    color #20c997
    margin-bottom 0px
    padding-bottom 0px

.wide-button
    padding 2px
    margin 0px
    margin-top 4px !important
    margin-left 9px


a, a:visited
    text-decoration none
    color #117a8b

a:hover
    color red

.blinking-red
    animation blinkingRed 0.1s infinite

    @keyframes blinkingRed {
        0% {
            color red
        }
        50% {
            color transparent
        }
        100% {
            color red
        }
    }

.blinking-green
    animation blinkingGreen 1.3s infinite

.shortener
    margin 10px

    input
        margin-left 10px

    button
        padding 3px
        margin-top 4px

@keyframes blinkingGreen {
    0% {
        color green
    }
    50% {
        color #955ae7
    }
    100% {
        color greenyellow
    }
}

.blinking-orange
    animation blinkingOrange 1.8s infinite

@keyframes blinkingOrange {
    0% {
        color yellow
    }
    50% {
        color orange
    }
    100% {
        color red
    }
}
